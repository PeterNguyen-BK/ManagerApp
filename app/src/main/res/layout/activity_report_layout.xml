<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:weightSum="11"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtStallId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Stall: 1"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNumberFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Number Food: 10"
                android:textAllCaps="true"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtNumberDeliveredOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Delivered Order: 10"
                android:textAllCaps="true"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtNumberCanceledOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Canceled Order: 10"
                android:textAllCaps="true"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtRevenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Revenue: 1.000.000VND"
                android:textAllCaps="true"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtNumberRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Number Rating: 20"
                android:textAllCaps="true"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtNumberComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Number Comment: 20"
                android:textAllCaps="true"
                android:textStyle="italic" />
<!--            <Button-->
<!--                android:id="@+id/btnDetailReport"-->
<!--                android:layout_width="90dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_marginLeft="150dp"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:layout_marginRight="150dp"-->
<!--                android:text="Detail" />-->


        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>